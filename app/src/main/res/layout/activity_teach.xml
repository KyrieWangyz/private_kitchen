<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <com.youdu.ButtonTest.ObservableScrollView
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="265dp"
                android:textColor="#443C33"
                android:id="@+id/name"
                android:text="漳州四果汤"
                android:textSize="30sp"
                android:layout_width="190dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_alignLeft="@+id/name"
                android:id="@+id/linearLayout"
                android:layout_below="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/recommend_icon_star"
                    android:id="@+id/star1"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:src="@mipmap/recommend_icon_star"
                    android:id="@+id/star2"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:src="@mipmap/recommend_icon_star"
                    android:id="@+id/star3"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:src="@mipmap/recommend_icon_star"
                    android:id="@+id/star4"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:src="@mipmap/recommend_icon_star"
                    android:id="@+id/star5"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />


            </LinearLayout>
            <com.youdu.ButtonTest.CustomFourImageView

                android:id="@+id/customfourimageview"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </com.youdu.ButtonTest.CustomFourImageView>
            <ImageView
                android:layout_alignLeft="@+id/name"
                android:src="@mipmap/recipe_icon_time"
                android:id="@+id/time_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="44dp"/>

            <TextView
                android:layout_marginLeft="4dp"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="44dp"
                android:layout_toRightOf="@id/time_view"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="所需时间"
                />
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_below="@+id/time_view"
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content">
                    <com.youdu.view.CircleView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/circle1"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/circle1"
                        android:textSize="17sp"
                        android:text="总时长"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content">
                    <com.youdu.view.CircleView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/circle2"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/circle2"
                        android:textSize="17sp"
                        android:text="烹饪时长"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  />
                </RelativeLayout>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content">
                    <com.youdu.view.CircleView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/circle3"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/circle3"
                        android:textSize="17sp"
                        android:text="腌制时长"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content">
                    <com.youdu.view.CircleView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/circle4"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/circle4"
                        android:text="静置时长"
                        android:textSize="17sp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_alignLeft="@+id/name"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/linearLayout2"
                android:id="@+id/nutrition"
                android:src="@mipmap/recipe_icon_nutrition"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:text="营养成分"
                android:textSize="22sp"
                android:textColor="#666666"
                android:layout_alignTop="@+id/nutrition"
                android:layout_toRightOf="@+id/nutrition"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_below="@+id/nutrition"
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/kll"
                        android:text="卡路里"
                        android:textSize="17sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/kll"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#666666"
                            android:textSize="17sp"
                            android:text="263"
                            android:id="@+id/kll_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="#666666"
                            android:textSize="17sp"
                            android:text="大卡"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/dbz"
                        android:text="蛋白质"
                        android:textSize="17sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/dbz"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#666666"
                            android:textSize="17sp"
                            android:text="8"
                            android:id="@+id/dbz_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="#666666"
                            android:textSize="17sp"
                            android:text="克"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/zf"
                        android:text="脂肪"
                        android:textSize="17sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/zf"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#666666"
                            android:textSize="17sp"
                            android:text="6"
                            android:id="@+id/zf_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="#666666"
                            android:textSize="17sp"
                            android:text="克"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/ts"
                        android:text="碳水化合物"
                        android:textSize="17sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/ts"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#666666"
                            android:textSize="17sp"
                            android:text="11"
                            android:id="@+id/ts_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="#666666"
                            android:textSize="17sp"
                            android:text="克"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_alignLeft="@+id/name"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/linearLayout3"
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:text="≈"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="慢跑50分钟"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_below="@+id/linearLayout4"
                android:layout_marginTop="30dp"
                android:layout_alignLeft="@+id/name"
                android:id="@+id/material"
                android:src="@mipmap/recipe_icon_material"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_marginTop="30dp"
                android:textColor="#666666"
                android:layout_below="@+id/linearLayout4"
                android:layout_toRightOf="@+id/material"
                android:text="所需食材"
                android:textSize="22sp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/listview_material"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
            <TextView
                android:layout_alignLeft="@+id/name"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/listview_material"
                android:text="加润滑油"
                android:id="@+id/remark3"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_marginTop="30dp"
                android:layout_below="@+id/remark3"
                android:layout_alignLeft="@+id/name"
                android:src="@mipmap/recipe_icon_step"
                android:id="@+id/detial_process"
                android:layout_width="24dp"
                android:layout_height="24dp"
                />
            <TextView
                android:textColor="#666666"
                android:text="详细步骤"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/remark3"
                android:layout_toRightOf="@+id/detial_process"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="16dp"
                android:layout_below="@+id/detial_process"
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/img1"
                android:layout_marginTop="8dp"
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="16dp"
                android:layout_below="@+id/text1"
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />
            <TextView
                android:layout_below="@+id/img2"
                android:layout_marginTop="8dp"
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />
            <ImageView
                android:layout_marginTop="16dp"
                android:layout_below="@+id/text2"
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />
            <TextView
                android:layout_below="@+id/img3"
                android:layout_marginTop="8dp"
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />
            <ImageView
                android:layout_marginTop="16dp"
                android:layout_below="@+id/text3"
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />
            <TextView
                android:layout_below="@+id/img4"
                android:layout_marginTop="8dp"
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />


        </RelativeLayout>


    </com.youdu.ButtonTest.ObservableScrollView>

    <Button
        android:id="@+id/startCook"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@mipmap/recipe_btn_start"
        android:layout_marginTop="228dp"
        android:layout_marginLeft="268dp">
    </Button>
</RelativeLayout>