<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title"
        android:background="@color/colorMain"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"></LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/im1"
        android:layout_width="110dp"
        android:layout_height="110dp" />
    <TextView
        android:textColor="#5a5252"
        android:layout_marginTop="45dp"
        android:textSize="23sp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:text="克利夫兰老实人"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bianji"
        android:textColor="#a49b9b"
        android:layout_marginTop="20dp"
        android:text="编辑个人信息"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/title"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#565151"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:layout_below="@+id/title"
        android:text="身高"
        android:id="@+id/taler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:editable="false"
        android:textColor="#565151"
        android:layout_alignBottom="@+id/taler_text"
        android:layout_toRightOf="@+id/taler_text"
        android:layout_marginLeft="10dp"
        android:text="178"
        android:textSize="22sp"
        android:id="@+id/taler_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#565151"
        android:text="cm"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/taler_text"
        android:layout_toRightOf="@+id/taler_edit"
        android:id="@+id/taler_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="#565151"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:layout_below="@+id/taler_edit"
        android:text="体重"
        android:id="@+id/weight_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:editable="false"
        android:textColor="#565151"
        android:layout_alignBottom="@+id/weight_text"
        android:layout_toRightOf="@+id/weight_text"
        android:layout_marginLeft="10dp"
        android:text="150"
        android:textSize="22sp"
        android:id="@+id/weight_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#565151"
        android:text="kg"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/weight_text"
        android:layout_toRightOf="@+id/weight_edit"
        android:id="@+id/weight_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="#565151"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:layout_below="@+id/weight_edit"
        android:text="年龄"
        android:id="@+id/age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:editable="false"
        android:textColor="#565151"
        android:layout_alignBottom="@+id/age_text"
        android:layout_toRightOf="@+id/age_text"
        android:layout_marginLeft="10dp"
        android:text="22"
        android:textSize="22sp"
        android:id="@+id/age_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#565151"
        android:text="岁"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/age_text"
        android:layout_toRightOf="@+id/age_edit"
        android:id="@+id/age_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="#565151"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:layout_below="@+id/age_edit"
        android:text="性别"
        android:id="@+id/sex_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:editable="false"
        android:textColor="#565151"
        android:layout_alignBottom="@+id/sex_text"
        android:layout_toRightOf="@+id/sex_text"
        android:layout_marginLeft="10dp"
        android:text="男"
        android:textSize="22sp"
        android:id="@+id/sex_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="#565151"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:layout_below="@+id/sex_edit"
        android:text="体重目标"
        android:id="@+id/weightgoal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:editable="false"
        android:textColor="#565151"
        android:layout_alignBottom="@+id/weightgoal_text"
        android:layout_toRightOf="@+id/weightgoal_text"
        android:layout_marginLeft="10dp"
        android:text="140"
        android:textSize="22sp"
        android:id="@+id/weightgoal_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#565151"
        android:text="kg"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/weightgoal_text"
        android:layout_toRightOf="@+id/weightgoal_edit"
        android:id="@+id/weightgoal_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#565151"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:layout_below="@+id/weightgoal_edit"
        android:text="减肥周期"
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:editable="false"
        android:textColor="#565151"
        android:layout_alignBottom="@+id/time_text"
        android:layout_toRightOf="@+id/time_text"
        android:layout_marginLeft="10dp"
        android:text="25"
        android:textSize="22sp"
        android:id="@+id/time_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#565151"
        android:text="天"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/time_text"
        android:layout_toRightOf="@+id/time_edit"
        android:id="@+id/time_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>